data("Titanic") # built-in array; for a data frame, use titanic_train from datasets or read from Titanic.csv

# If you have a data frame TitanicTrain from a typical dataset:
# For demonstration, use a simple Titanic-like data frame
set.seed(1)
titanic_df <- data.frame(
  Survived = sample(0:1, 100, replace = TRUE),
  Pclass = sample(1:3, 100, replace = TRUE),
  Sex = sample(c("male","female"), 100, replace = TRUE),
  Age = rnorm(100, 30, 14)
)

# Bar chart of survival vs class
library(ggplot2)
ggplot(titanic_df, aes(x = factor(Pclass), fill = factor(Survived))) +
  geom_bar(position = "dodge") +
  labs(x = "Pclass", fill = "Survived", y = "Count")

# Modify plot by gender
ggplot(titanic_df, aes(x = factor(Pclass), fill = Sex)) +
  geom_bar(position = "dodge")

# Histogram of Age
ggplot(titanic_df, aes(x = Age)) +
  geom_histogram(binwidth = 5, fill = "steelblue", color = "white")
